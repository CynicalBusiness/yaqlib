{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "defaultBase": "develop",
    "plugins": [
        {
            "plugin": "@nx/js/typescript",
            "options": {
                "typecheck": {
                    "targetName": "typecheck"
                },
                "build": {
                    "targetName": "build",
                    "configName": "tsconfig.lib.json"
                }
            }
        },
        {
            "plugin": "@nx/eslint/plugin",
            "options": {
                "targetName": "lint"
            }
        },
        {
            "plugin": "@nx/jest/plugin",
            "options": {
                "targetName": "test"
            }
        }
    ],
    "targetDefaults": {
        "@nx/js:tsc": {
            "cache": true,
            "dependsOn": ["^build"],
            "inputs": ["default", "^default"]
        },
        "test": {
            "options": {
                "coverage": true
            }
        },
        "build": {
            "options": {
                "platform": "neutral",
                "thirdParty": false
            }
        }
    }
}
